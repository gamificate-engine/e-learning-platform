<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <p>Total courses: <%= courses.length %></p>
        </div>
    </header>

    <% if(current_user.isTeacher) { %>
        <div class="row float-right">
            <a href="/courses/new" class="btn btn-primary float-right">Create course</a>
        </div>
    <% } %>

    <div class="row">
        <% courses.forEach( course => { %>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= course.name %></h5>
                        <a href="/courses/<%= course.id %>" class="btn btn-primary float-right">Explore</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>

